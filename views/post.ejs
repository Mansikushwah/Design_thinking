<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Post Listings - SkillConnect</title>
    <style>
        /* Base Styles */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Arial', sans-serif;
            background-color: white;
            /* Lighter background */
            color: #333;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            /* Ensures the body takes up at least the full viewport height */
        }

        /* Wrapper for the content and footer */
        .content-wrapper {
            flex: 1;
            /* This will push the footer to the bottom */
        }

        /* Header */
        header {
            background-color: #27374D;
            /* Dark for the navbar */
            padding: 15px 20px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            position: fixed;
            width: 100%;
            top: 0;
            left: 0;
            z-index: 1000;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        header h1 {
            font-size: 2.5em;
            margin: 0;
            color: white;
        }

        header nav {
            display: flex;
            align-items: center;
            margin-right: 3vw;
        }

        header nav a {
            color: white;
            text-decoration: none;
            font-weight: bold;
            margin: 0 15px;
            transition: color 0.3s ease;
        }

        header nav a:hover {
            color: #9DB2BF;
        }

        /* Main Content */
        main {
            padding: 80px 20px 40px;
            margin-top: 60px;
        }

        .search-section {
            text-align: center;
            margin-bottom: 40px;
        }

        .search-section input {
            padding: 10px;
            font-size: 1.2em;
            width: 60%;
            max-width: 500px;
            border-radius: 5px;
            border: 1px solid #CCC;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .search-section button {
            padding: 10px 20px;
            font-size: 1.2em;
            border: none;
            background-color: #27374D;
            color: white;
            cursor: pointer;
            border-radius: 5px;
            margin-left: 10px;
        }

        .search-section button:hover {
            background-color: #526D82;
        }

        .post-listings {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
        }

        .post-card {
            background-color: #DDE6ED;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            margin: 20px;
            width: 45%;
            max-width: 400px;
        }

        .post-card img {
            width: 100%;
            height: auto;
            border-radius: 10px;
        }

        .post-card h2 {
            font-size: 1.5em;
            color: #34322c;
            margin: 15px 0;
        }

        .post-card p {
            color: #666;
            margin: 5px 0;
        }

        .post-card .view-profile-button {
            background-color: #27374D;
            color: white;
            padding: 10px 15px;
            border: none;
            border-radius: 5px;
            text-decoration: none;
            margin-top: 10px;
            display: inline-block;
        }

        .post-card .view-profile-button:hover {
            background-color: #526D82;
        }

        /* Footer */
        footer {
            background-color: #DDE6ED;
            padding: 20px;
            text-align: center;
            color: #333;
            box-shadow: 0 -4px 6px rgba(0, 0, 0, 0.1);
            margin-top: 40px;
        }

        footer h3 {
            margin: 0 0 10px;
            font-size: 1.5em;
            color: #27374D;
        }

        footer a {
            color: #333;
            text-decoration: none;
            font-weight: bold;
            margin: 0 10px;
            transition: color 0.3s ease;
        }

        footer a:hover {
            color: #9DB2BF;
        }

        @media (max-width: 768px) {
            .post-card {
                width: 90%;
            }
        }
    </style>
</head>

<body>
    <!-- Main content wrapper to ensure the footer stays at the bottom -->
    <div class="content-wrapper">
        <header>
            <h1>SkillConnect</h1>
            <nav>
                <% if (user) { %>
                    <p>Hello, <%= user.username %>!</p>
                    <a href="/profile">Profile</a>
                    <a href="/search">Showcases</a>
                    <a href="/logout">Logout</a>
                    <% } else { %>
                        <a href="/">Home</a>
                        <a href="/login">Login</a>
                        <a href="/register">Register</a>
                        <a href="/about">About Us</a>
                        <% } %>
            </nav>
        </header>

        <main>
            <!-- Search Section -->
            <section class="search-section">
                <input type="text" id="searchBar" placeholder="Type job or keyword" value="<%= searchTerm %>">
                <button onclick="searchJobs()">Go</button>
            </section>

            <!-- Posts Listing -->
            <section class="post-listings">
                <% if (posts.length> 0) { %>
                    <% posts.forEach(post=> { %>
                        <div class="post-card">
                            <img src="<%= post.profile_photo_url || '/images/default_profile_photo.jpg' %>"
                                alt="Profile Photo">
                            <h2>
                                <%= post.title %>
                            </h2>
                            <p><strong>Posted By:</strong>
                                <%= post.poster %>
                            </p>
                            <p><strong>Skills:</strong>
                                <%= post.skills %>
                            </p>
                            <p><strong>Description:</strong>
                                <%= post.content %>
                            </p>
                            <p><strong>Posted:</strong>
                                <%= new Date(post.created_at).toLocaleDateString() %>
                            </p>
                            <a href="javascript:void(0);" data-post-id="<%= post.post_id %>" onclick="viewProfileByPost(this)" class="view-profile-button">View Profile</a>


                        </div>
                        <% }) %>
                            <% } else { %>
                                <p>No posts found.</p>
                                <% } %>
            </section>
        </main>
    </div>

    <footer>
        <h3>SkillConnect</h3>
        <p>&copy; 2024 SkillConnect. All rights reserved.</p>
        <a href="/about">About Us</a> | <a href="/contact">Contact Us</a> | <a href="/privacy">Privacy Policy</a>
    </footer>

    <script>
        // document.addEventListener('DOMContentLoaded', function () {
        function searchJobs() {
            const searchTerm = document.getElementById('searchBar').value;
            window.location.href = '/post?q=' + encodeURIComponent(searchTerm);
        }

        // Function to view profile based on post_id
        function viewProfileByPost(anchorElement) {
            const postId = anchorElement.getAttribute('data-post-id'); // Extract post_id from the element's data attribute
            console.log("hello");
            console.log("Redirecting to profile of post:", postId); // Log post_id
            window.location.href = `/anotherProfile/${postId}`;
        }



        function displayProfile(profile) {
            const profileDiv = document.getElementById('profile-content');
            profileDiv.innerHTML = `
      <p><strong>Username:</strong> ${profile.username}</p>
      <p><strong>Email:</strong> ${profile.email}</p>
      <p><strong>Profile Photo:</strong> <img src="${profile.profile_photo}" alt="Profile Photo"></p>
      <p><strong>Availability:</strong> ${profile.availability}</p>
      <p><strong>Rating:</strong> ${profile.rating}/5</p>
      <p><strong>Joined:</strong> ${profile.created_at}</p>
    `;
        }
        // });
    </script>
</body>

</html>