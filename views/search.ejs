<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/styles.css">
    <title>SkillConnect - Search</title>
    <style>
        /* Base Styles */
        body {
            font-family: 'Arial', sans-serif;
            background-color: white;
            color: #333;
            margin: 0;
            padding: 0;
        }

        /* Navigation Bar */
        header {
            background-color: #27374D;
            padding: 15px 20px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            position: fixed;
            width: 100%;
            top: 0;
            left: 0;
            z-index: 1000;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        header h1 {
            font-size: 2.5em;
            margin: 0;
            color: white;
        }

        header nav {
            display: flex;
            align-items: center;
            margin-right: 2.5vw;
        }

        header nav a {
            color: white;
            text-decoration: none;
            font-weight: bold;
            margin: 0 15px;
            transition: color 0.3s ease;
        }

        header nav a:hover {
            color: #9DB2BF;
        }

        /* Main Content */
        main {
            padding: 80px 20px;
            margin-top: 60px;
            text-align: center;
        }

        .search-container {
            text-align: center;
            margin-bottom: 30px;
        }

        .search-container input[type="text"] {
            width: 60%;
            padding: 12px;
            font-size: 16px;
            border: 1px solid #CCC;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            border-radius: 5px;
        }

        .search-container button {
            padding: 12px 25px;
            font-size: 16px;
            margin-left: 10px;
            border: none;
            background-color: #27374D;
            color: white;
            border-radius: 5px;
            cursor: pointer;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            transition: background-color 0.3s ease;
        }

        .search-container button:hover {
            background-color: #526D82;
        }

        /* Showcase Section */
        .features {
            display: flex;
            justify-content: space-around;
            flex-wrap: wrap;
            margin-top: 40px;
        }

        .showcase {
            background-color: #DDE6ED;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
            width: 28%;
            text-align: center;
            margin: 10px;
            transition: transform 0.3s ease;
        }

        .showcase:hover {
            transform: scale(1.05);
        }

        .showcase img {
            width: 100%;
            height: auto;
            border-radius: 10px;
            margin-bottom: 15px;
            display: block;
            /* Ensures the image is a block element */
            object-fit: cover;
            /* Ensures the image covers the container properly */
            display: block !important;
            visibility: visible !important;
            opacity: 1
        }


        .showcase h3 {
            color: #27374D;
            margin-bottom: 10px;
        }

        .details {
            text-align: left;
        }

        .details span {
            display: block;
            margin: 5px 0;
            color: #333;
        }

        /* Footer */
        footer {
            background-color: #DDE6ED;
            padding: 20px;
            text-align: center;
            color: #333;
            box-shadow: 0 -4px 6px rgba(0, 0, 0, 0.1);
            margin-top: 40px;
        }

        footer h3 {
            font-size: 1.5em;
            margin-bottom: 10px;
            color: #27374D;
        }

        footer a {
            color: #333;
            text-decoration: none;
            font-weight: bold;
            margin: 0 10px;
            transition: color 0.3s ease;
        }

        footer a:hover {
            color: #9DB2BF;
        }

        /* Responsive Design */
        @media screen and (max-width: 768px) {
            .showcase {
                width: calc(50% - 30px);
            }
        }

        @media screen and (max-width: 500px) {
            .showcase {
                width: 100%;
            }
        }
    </style>
</head>

<body>

    <!-- Header Section -->
    <header>
        <h1>SkillConnect</h1>
        <nav>
            <% if (user) { %>
                <a href="/profile">Profile</a>
                <a href="/search_people">People</a>
                <a href="/post">Post</a>
                <a href="/logout">Logout</a>
                <% } else { %>
                    <a href="/login">Login</a> | <a href="/register">Register</a> | <a href="/about">About Us</a>
                    <% } %>
        </nav>
    </header>

    <!-- Main Content Section -->
    <main>
        <!-- Search Bar -->
        <div class="search-container">
            <input type="text" id="skillSearch" placeholder="Search by skill...">
            <button id="searchBtn">Search</button>
        </div>

        <!-- Showcase Section -->
        <section class="features">
            <% showcases.forEach(showcase=> { %>
                <div class="showcase">
                    <img src="<%= showcase.image_url %>" alt="<%= showcase.title %>">
                    <h3>
                        <%= showcase.title %>
                    </h3>
                    <div class="details">
                        <span><strong>Skill Seeker:</strong>
                            <%= showcase.skill_seeker %>
                        </span>
                        <span><strong>Skill:</strong>
                            <%= showcase.skill_name %>
                        </span>
                        <span><strong>Description:</strong>
                            <%= showcase.description %>
                        </span>
                        <span><strong>Date:</strong>
                            <%= new Date(showcase.created_at).toLocaleDateString() %>
                        </span>
                    </div>
                </div>
                <% }) %>
        </section>
    </main>

    <!-- Footer Section -->
    <footer>
        <h3>SkillConnect</h3>
        <p>&copy; 2024 SkillConnect. All rights reserved.</p>
        <a href="/about">About Us</a> | <a href="/contact">Contact</a> | <a href="/privacy">Privacy Policy</a>
    </footer>

    <script>
        document.getElementById('searchBtn').addEventListener('click', function () {
            const searchTerm = document.getElementById('skillSearch').value.toLowerCase();
            const showcases = document.querySelectorAll('.showcase');

            showcases.forEach(showcase => {
                const skill = showcase.querySelector('.details span:nth-child(2)').innerText.toLowerCase();
                showcase.style.display = skill.includes(searchTerm) ? 'block' : 'none';
            });
        });
    </script>
</body>

</html>